FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 4.65;	//tu = 5 - mut/mu=10

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    cylinder
    {
        //type            fixedValue;
        //value           uniform 2860;
        type            omegaWallFunction;
        value           $internalField;;
    }
    "(top|bottom)"
    {
        type            symmetry;
    }
    
    frontAndBack
    {
        type            symmetry;
    }
}

// ************************************************************************* //
